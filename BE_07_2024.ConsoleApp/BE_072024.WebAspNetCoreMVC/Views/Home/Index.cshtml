@{
    ViewData["Title"] = "Home Page";

    var model = new List<Employeer>();
    try
    {
        for (int i = 0; i < 5; i++)
        {
            model.Add(new Employeer
                    {
                        Firstname = i % 2 == 0 ? "MR" : "Ms",
                        LastName = i.ToString(),
                        Email = i + "@gmail.com"
                    });
        }
    }
    catch (Exception ex)
    {

        throw;
    }
}


@model List<BE_072024.WebAspNetCoreMVC.Models.Employeer>
@Html.ActionLink("Bấm vào đây", "Privacy", "Home")
<div class="row">

    <form action="Index" method="post">
        <div class="form-group">
            <label for="email">FirstName:</label>
            <input type="text" class="form-control" name="Firstname" id="Firstname">
        </div>
        <div class="form-group">
            <label for="pwd">LastName:</label>
            <input type="text" class="form-control" name="LastName" id="LastName">
        </div>
        <div class="form-group">
            <label for="pwd">Email:</label>
            <input type="text" class="form-control" name="Email" id="Email">
        </div>
        <button type="button" id="btnSave" class="btn btn-success"><i class="fa fa-save"></i>Lưu</button>
    </form>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
  @*   @Html.Partial("~/Views/Home/_ListEmployeerPartial.cshtml", model); *@
    <div id="ListEmployeerPartial"></div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            LoadPartialView();
            $("#btnSave").click(function () {
                SaveData();
            });
        });

        function SaveData() {
            debugger;
            var param = {
                Firstname: $("#Firstname").val(),
                LastName: $("#LastName").val(),
                Email: $("#Email").val()
            };

            $.ajax({
                type: 'POST',
                url: "/Home/Index",
                data: param,
                async: true,
                dataType: "html",
                // dataType:"json",
                success: function (rs) {
                    alert(JSON.stringify(rs));
                },
                error(rs) {
                    console.log(JSON.stringify(rs));
                }
            });
        }

        function LoadPartialView(){
            $.ajax({
                type: 'GET',
                url: "/Home/_ListEmployeerPartial",
                data: {},
                async: true,
                dataType: "html",
                // dataType:"json",
                success: function (rs) {
                    $("#ListEmployeerPartial").html("");
                    $("#ListEmployeerPartial").html(rs);
                },
                error(rs) {
                    console.log(JSON.stringify(rs));
                }
            });
        }
    </script>
}